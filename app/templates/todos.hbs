<header id="header">
  <h1>todos</h1>
  {{input type="text" id="new-todo" placeholder="What needs to be done?" value=newTitle action="createTodo"}}
</header>

<section id="main">
  {{outlet}}
  {{input type="checkbox" id="toggle-all" checked=allAreDone}}
</section>

<footer id="footer">
  <span id="todo-count">
    <strong>{{controller.remaining}}</strong> {{inflection}} left
  </span>
  <ul id="filters">
    <li>
      {{link-to 'All' 'todos.index' activeClass='selected'}}
    </li>
    <li>
      {{link-to 'Active' 'todos.active' activeClass='selected'}}
    </li>
    <li>
      {{link-to 'Completed' 'todos.completed' activeClass='selected'}}
    </li>
  </ul>

  {{#if hasCompleted}}
    <button id="clear-completed" {{action "clearCompleted"}}>
      Clear completed ({{completed}})
    </button>
  {{/if}}
</footer>
